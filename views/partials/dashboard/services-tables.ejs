<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Precio Base</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% services.forEach(service => { %>
            <tr>
                <td><%= service.id %></td>
                <td><%= service.name %></td>
                <td><%= service.description || 'No disponible' %></td>
                <td>S/ <%= service.base_price %></td>
                <td><img src="<%= service.image_url || '/images/default.jpg' %>" alt="<%= service.name %>" width="50" height="50"></td>
                <td>
                    <a href="/admin/services/edit/<%= service.id %>" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/admin/services/delete/<%= service.id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
