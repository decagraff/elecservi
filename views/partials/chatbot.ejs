<div id="chatbot-container">
    <div id="chatbot-icon">
        <img src="/images/chatbot-icon.png" alt="Chatbot Icon">
    </div>
    <div id="chatbot-window">
        <div id="chatbot-header">
            <h3>Asistente Virtual</h3>
            <button id="close-chatbot">&times;</button>
        </div>
        <div id="chatbot-body">
            <div id="chatbot-messages">
                <div class="message bot">¡Hola! Soy tu asistente virtual. ¿En qué puedo ayudarte?</div>
            </div>
        </div>
        <div id="chatbot-input">
            <input type="text" id="chatbot-question" placeholder="Escribe tu pregunta...">
            <button id="send-question"><i class="fas fa-paper-plane"></i></button>
        </div>
        <div id="suggestions-container">
            <div id="suggestions-list"></div>
        </div>
    </div>
</div>