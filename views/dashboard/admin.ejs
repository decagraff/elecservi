<!-- admin.ejs -->

<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head', { title: title, stylesheets: stylesheets }) %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap">
</head>
<body>
    <div class="dashboard-container">
        <%- include('../partials/dashboard/sidebar-admin') %>

        <main class="dashboard-main">
            <%- include('../partials/dashboard/header', { title: 'Panel de Administración', user: user }) %>

            <div class="dashboard-content">
                <div class="content-section">
                    <h3 class="section-title">Estado de Servicios Actuales</h3>
                    <div class="table-container">
                        <%- include('../partials/dashboard/services-table', { services: services }) %>
                    </div>
                    <!-- Agregar un botón para gestionar los servicios -->
                    <div class="service-management">
                        <a href="/dashboard/services" class="btn btn-primary">Gestionar Servicios</a>
                    </div>
                </div>

                <div class="grid-container">
                    <div class="content-section chart-section">
                        <h3 class="section-title">Ventas por Mes</h3>
                        <canvas id="salesChart"></canvas>
                    </div>

                    <div class="content-section">
                        <h3 class="section-title">Clientes Nuevos</h3>
                        <%- include('../partials/dashboard/recent-clients', { clients: recentClients }) %>
                    </div>

                    <div class="content-section">
                        <h3 class="section-title">Actividad Reciente</h3>
                        <%- include('../partials/dashboard/recent-activity', { activities: recentActivity }) %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <%- include('../partials/dashboard/scripts') %>
</body>
</html>
