<!-- views/dashboard/edit-service.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head', { title: 'Editar Servicio | Electro Servicios Chávez', stylesheets: '/css/dashboard.css' }) %>
</head>
<body>
    <div class="dashboard-container">
        <%- include('../partials/dashboard/sidebar-admin') %>

        <main class="dashboard-main">
            <%- include('../partials/dashboard/header', { title: 'Editar Servicio', user: user }) %>

            <div class="dashboard-content">
                <h3 class="section-title">Editar Servicio: <%= service.name %></h3>

                <form action="/dashboard/services/update/<%= service.id %>" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Nombre del Servicio</label>
                        <input type="text" id="name" name="name" class="form-control" value="<%= service.name %>" required>
                    </div>

                    <div class="form-group">
                        <label for="description">Descripción</label>
                        <textarea id="description" name="description" class="form-control" required><%= service.description %></textarea>
                    </div>

                    <div class="form-group">
                        <label for="base_price">Precio Base</label>
                        <input type="number" id="base_price" name="base_price" class="form-control" value="<%= service.base_price %>" required>
                    </div>

                    <div class="form-group">
                        <label for="image_url">URL de Imagen</label>
                        <input type="text" id="image_url" name="image_url" class="form-control" value="<%= service.image_url %>">
                    </div>

                    <button type="submit" class="btn btn-primary">Actualizar Servicio</button>
                </form>
            </div>
        </main>
    </div>

    <%- include('../partials/dashboard/scripts') %>
</body>
</html>
